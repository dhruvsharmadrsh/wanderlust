<% layout("/layouts/boilerplate") %>

    <body>
        <h1>All Listings</h1>
        <div class="row row-cols-lg-3 row-col-md-2 row-col-sm-1">
            <% for (let listings of allListings){%>
                <a href="/listings/<%= listings._id%> " class="listing-link">
                    <div class="card col listing-card">
                        <img class="card-img-top" src="<%= listings.image %>" alt="Listing image" style="height: 20rem;" />
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                             <p class="card-text">
                                <b>
                                    <%= listings.title%>
                                </b> <br>
                                &#8377; <%= listings.price.toLocaleString("en-IN") %>/night
                            </p>
                        </div>
                    </div>
                </a>
                <% }%>
        </div>
    </body>